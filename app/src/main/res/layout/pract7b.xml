<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/enter"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <TextView
            android:id="@+id/log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:layout_marginTop="20dp"
            android:text="Enter you Personal details" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/log"
            android:hint="Enter Your Name"
            android:text="Om"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:id="@+id/us"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/us"
            android:hint="Enter Your father's Name"
            android:text="Adde"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/father"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/father"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Submit"
            android:id="@+id/btn"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/enter">

        <TextView
            android:id="@+id/det"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:layout_marginTop="20dp"
            android:text="Student's Personal details" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/det"
            android:hint="Enter Your Name"
            android:text="Name: Om"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:id="@+id/nm"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nm"
            android:hint="Enter Your father's Name"
            android:text="Surname: Adde"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/fth"/>

    </RelativeLayout>

</RelativeLayout>